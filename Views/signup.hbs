<div class="container" style="margin-top: 130px;">
    <div class="row">
        <div class="col" style="text-align: center; margin-top: 110px;">
            <img src="../uploads/avata.png" alt="fail">
        </div>
        <div class="col">
            <div class="container" style="height: 450px;margin-top: 50px">
                <h2 style="text-align: center;font-size: 50px;">SIGUP</h2>
                <form method="POST" action="/signup" autocomplete="off">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" name="email" required placeholder="Enter Username : ">
                    </div>
                    <div class="form-group">
                        <label for="username">UserName</label>
                        <input type="text" class="form-control" name="username" required
                            placeholder="Enter Username : ">
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" name="password" required
                            placeholder="Enter Password : ">
                    </div>
                    <div class="mb-6">
                        <button type="submit" class="btn btn-block text-uppercase btn-primary" style="margin-top: 5px;">
                            Đăng kí
                        </button>
                    </div>
                </form>
                <div class="text-center" style="margin-top: 10px;">
                    Bạn đã có tài khoản ?<a href="login" class="register-link">
                        Đăng Nhập</a>
                </div>
            </div>
        </div>
    </div>